<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--底部显示的dialog-->

    <com.weigan.loopview.LoopView
        android:id="@+id/loopView"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:awv_centerTextColor="@color/sampling_static_color"
        app:awv_dividerTextColor="@color/sampling_input_color"
        app:awv_isLoop="false"
        app:awv_itemsVisibleCount="6"
        app:awv_lineSpace="3"
        app:awv_outerTextColor="@color/sampling_input_color"
        app:awv_textsize="14"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:textSize="14dp"
        android:textColor="@color/sampling_static_color"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:textSize="14dp"
        android:textColor="@color/sampling_static_color"/>


</RelativeLayout>