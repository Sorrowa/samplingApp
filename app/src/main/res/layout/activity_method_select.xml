<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SamplingForm.SelectActivitys.MethodSelectActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_generative"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:imeOptions="actionSearch"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:id="@+id/search_edit_method"
            android:hint="请输入您的搜索内容"
            android:textSize="13sp"
            android:background="@drawable/search_input"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:background="@color/white"
            android:id="@+id/search_bt"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3778e6"
            android:text="搜索"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#efefef"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/method_recyclerview">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>